@using Domain.Modules.Base.ViewModels
@using Domain.Modules.Base.Enums
@using Shared.Web
@model ValueViewModel

<!DOCTYPE html>

<html lang="en">

@await Html.PartialAsync("~/Views/Shared/Login/_Header.cshtml", Model)

<body class="hold-transition login-page">

    <!-- Preloader -->
    <div class="preloader flex-column justify-content-center align-items-center">
        <img class="animation__shake" src="@MyHttpContext.GetBaseUrl("dist/img/AdminLTELogo.png")" alt="AdminLTELogo" height="60" width="60">
    </div>

    @await Html.PartialAsync("~/Views/Shared/Login/_Menu.cshtml", Model)

    @RenderBody()

    @await Html.PartialAsync("~/Areas/" + Model.ControllerName() + "/Views/" + Model.ViewName + "/Data/" + Model.ViewName + "Data.cshtml", Model)
    @await Html.PartialAsync("~/Areas/" + Model.ControllerName() + "/Views/" + Model.ViewName + "/Modal/" + Model.ViewName + "Modal.cshtml", Model)

    @await Html.PartialAsync("~/Views/Shared/Javascript/DataPageBase.cshtml", Model)

    @await Html.PartialAsync("~/Views/Shared/Javascript/DataPageAction.cshtml", Model)

    @await Html.PartialAsync("~/Views/Shared/Javascript/DataPageList.cshtml", Model)

    @await Html.PartialAsync("~/Views/Shared/Javascript/DataPageForms.cshtml", Model)

    @await Html.PartialAsync("~/Views/Shared/Login/_Modals.cshtml", Model)
    @await Html.PartialAsync("~/Views/Shared/Login/_Footer.cshtml", Model)

</body>

</html>