@using Domain.Modules.Base.Consts
@using Domain.Modules.Base.ViewModels
@using Domain.Modules.Base.Enums
@using Domain.Modules.CategoryOfProduct.Consts
@using Domain.Modules.Product.Consts
@using Domain.Modules.SignOut.Consts
@using Shared.Web

@model ValueViewModel


<nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
    </ul>

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
        <!-- Navbar Search -->
        <li class="nav-item">
            <a class="nav-link" data-widget="navbar-search" href="#" role="button">
                <i class="fas fa-search"></i>
            </a>
            <div class="navbar-search-block">
                <form class="form-inline">
                    <div class="input-group input-group-sm">
                        <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-navbar" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                            <button class="btn btn-navbar" type="button" data-widget="navbar-search">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </li>

        <li class="nav-item">
            <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                <i class="fas fa-expand-arrows-alt"></i>
            </a>
        </li>
    </ul>
</nav>

<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="#" class="brand-link">
        <img src="@MyHttpContext.GetBaseUrl("dist/img/AdminLTELogo.png")" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">Web MVC</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
            </div>
            <div class="info">
                <a href="#" class="d-block">@Model.UserName</a>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                     with font-awesome or any other icon font library -->
                 <li class="nav-item">
                    <a href="@($"{MyHttpContext.AppBaseUrl}/{ProductConsts.Url}")" class="nav-link @(Model.SubMenuElementName == MenuElementEnum.Product ? "active" : "")">
                        <i class="nav-icon fas fa-th"></i>
                        <p>
                            @ProductConsts.Title
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@($"{MyHttpContext.AppBaseUrl}/{CategoryOfProductConsts.Url}")" class="nav-link @(Model.SubMenuElementName == MenuElementEnum.CategoryOfProduct ? "active" : "")">
                        
                        <i class="nav-icon fas fa-table"></i>
                        <p>
                            @CategoryOfProductConsts.Title
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@($"{MyHttpContext.AppBaseUrl}/{SignOutConsts.Url}/{Model.UserGuid.ToString()}")" class="nav-link">
                        <i class="nav-icon fas fa-share"></i>
                        <p>
                            @SignOutConsts.Title
                        </p>
                    </a>
                </li>

                </li>
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>